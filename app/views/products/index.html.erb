<%= content_for :title, "Products" %>
<%= turbo_stream_from :products %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Products</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500">Sort by:</span>
        <%= sortable @products, :account_id, "Account", class: "text-gray-700 mr-1" %>
        <%= sortable @products, :name, "Name", class: "text-gray-700 mr-1" %>
        <%= sortable @products, :description, "Description", class: "text-gray-700 mr-1" %>
      </div>
    </div>

    <%= link_to t("shared.scaffold.new.title", model: "Product"), getting_started_index_path, class: "btn btn-white" %>
  </div>

  <%= tag.div id: ("products" if first_page?), class: "bg-white rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "products/index", collection: @products, as: :product, cached: true %>

    <div class="flex-col items-center justify-between hidden only:flex lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first Product</p>
        <%= link_to t("shared.scaffold.new.title", model: "Product"), getting_started_index_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>

<%= content_for :title, "Products ##{@product.id}" %>
<%= turbo_stream_from @product %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Products", products_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Product #<%= @product.id %>
    </h1>
    <%= link_to t("edit"), edit_product_path(@product), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @product %>
  </div>
</div>

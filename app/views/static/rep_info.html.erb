<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">Points Keys</h1>
      <span class="mt-2 text-sm text-gray-700">all reps assume bodyweight. One plank rep = 1 minute of planking</span>
    </div>
  </div>
  <div class="-mx-4 mt-8 flex flex-col sm:-mx-6 md:mx-0">
    <table class="min-w-full divide-y divide-gray-300">
      <tbody>
      <% Report::REP_TYPE_VALUES.each do |rep| %>
        <tr class="border-b border-gray-200">
          <td class="py-4 pl-4 pr-3 text-sm sm:pl-6 md:pl-0">
            <div class="font-medium text-gray-900"><%= rep[0].humanize %></div>
          </td>
          <td>
            <div class="mt-0.5 text-gray-500"><%= rep[1] %></div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
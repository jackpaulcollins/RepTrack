<div id="<%= dom_id report %>">
  <div class="mb-4">
    <p class="text-sm font-medium text-gray-500">User</p>
    <%= report.user.first_name %>
  </div>
  <div class="mb-4">
    <p class="text-sm font-medium text-gray-500">Date</p>
    <%= report.report_date %>
  </div>
  <div class="mb-4">
    <p class="text-sm font-medium text-gray-500">Points</p>
    <%= report.points %>
  </div>
  <div class="mb-4">
    <p class="text-sm font-medium text-gray-500">Rep type</p>
    <%= report.rep_type.humanize %>
  </div>
  <div class="mb-4">
    <p class="text-sm font-medium text-gray-500">Rep count</p>
    <%= report.rep_count %>
  </div>
</div>

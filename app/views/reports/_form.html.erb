<%= form_with(model: report) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :account_id %>
    <%= form.text_field :account_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :points %>
    <%= form.number_field :points, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rep_type %>
    <%= form.text_field :rep_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rep_count %>
    <%= form.number_field :rep_count, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), reports_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), report_path(@report), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>

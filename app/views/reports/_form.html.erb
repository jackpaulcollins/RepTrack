<%= form_with(model: report) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :rep_type %>
    <%= form.select :rep_type, 
                    Report::REP_TYPE_VALUES.collect { |k,v| [k.humanize, k]}, 
                    class: "form-control" 
    %>
  </div>

  <div class="form-group">
    <%= form.label :rep_count %>
    <%= form.number_field :rep_count, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), reports_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), report_path(@report), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
